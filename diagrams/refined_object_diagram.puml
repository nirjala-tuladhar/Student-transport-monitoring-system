  id = "uuid-901"
  title = "Bus Approaching"
  message = "Bus is 5 minutes away"
}

' Relationships
school1 --> bus1 : owns
school1 --> student1 : enrolls
bus1 --> student1 : transports
bus1 --> location1 : tracks
student1 --> parent1 : has
student1 --> boarding1 : records
student1 --> notification1 : receives

@enduml
