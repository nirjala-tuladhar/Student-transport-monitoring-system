skinparam shadowing false

title Student Transport System - Refined Object Diagram

object "school1: schools" as school1 {
  id = "uuid-001"
  name = "Kathmandu High School"
  latitude = 27.7172
  longitude = 85.3240
}

object "bus1: buses" as bus1 {
  id = "uuid-301"
  plate_number = "BA-1-PA-1234"
  driver_name = "Ram Sharma"
  capacity = 30
}

object "student1: students" as student1 {
  id = "uuid-401"
  name = "Sita Sharma"
  bus_stop_lat = 27.7100
  bus_stop_lng = 85.3200
}

object "parent1: parents" as parent1 {
  id = "uuid-501"
  name = "Krishna Sharma"
  phone = "+977-9841111111"
}

object "location1: bus_locations" as location1 {
  id = "uuid-701"
  latitude = 27.7080
  longitude = 85.3180
  timestamp = "2025-11-06 08:30:00"
}

object "boarding1: student_boarding_status" as boarding1 {
  id = "uuid-801"
  status = "boarded"
  timestamp = "2025-11-06 08:25:00"
}

