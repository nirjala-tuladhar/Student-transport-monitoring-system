@startuml Student_Transport_Component_Diagram
skinparam linetype ortho
skinparam backgroundColor #FEFEFE
skinparam componentBackgroundColor #E6F7FF
skinparam componentBorderColor #1E90FF
skinparam shadowing false
skinparam nodesep 80
skinparam ranksep 80

title Student Transport Monitoring System - Component Diagram

package "Client Layer" {
  [Super Admin Panel] as SuperAdmin
  [School Admin Panel] as SchoolAdmin
  [Parent Panel] as Parent
  [Bus Driver Panel] as Bus
}

package "Authentication" {
  [Auth Service] as Auth
}

package "Core Services" {
  [School Service] as SchoolSvc
  [Parent Service] as ParentSvc
  [Bus Service] as BusSvc
  [Notification Service] as NotifSvc
}

package "External Services" {
  [Geocoding Service] as GeoSvc
  [Map Service] as MapSvc
}

database "Database" as DB

cloud "Realtime" as RT

' Client to Auth
SuperAdmin -down-> Auth
SchoolAdmin -down-> Auth
Parent -down-> Auth
Bus -down-> Auth

' Client to Services
SuperAdmin -down-> SchoolSvc
SchoolAdmin -down-> SchoolSvc
Parent -down-> ParentSvc
Bus -down-> BusSvc

' Services to Database
Auth -down-> DB
SchoolSvc -down-> DB
ParentSvc -down-> DB
BusSvc -down-> DB
NotifSvc -down-> DB

' Services to External
ParentSvc -right-> GeoSvc
SchoolSvc -right-> GeoSvc
Parent -right-> MapSvc
SchoolAdmin -right-> MapSvc

' Real-time
Bus -down-> RT
Parent -down-> RT
RT -down-> DB

@enduml
