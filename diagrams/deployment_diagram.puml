@startuml Student_Transport_Deployment_Diagram
skinparam linetype ortho
skinparam backgroundColor #FEFEFE
skinparam nodeBackgroundColor #FFE6F0
skinparam nodeBorderColor #FF1493
skinparam shadowing false
skinparam nodesep 100
skinparam ranksep 100

title Student Transport Monitoring System - Deployment Diagram

node "Client Devices" as ClientNode {
  artifact "Web Apps" as WebApps
  artifact "Mobile Apps" as MobileApps
}

node "Flutter" as FlutterNode {
  component "Flutter Web" as FWeb
  component "Flutter Mobile" as FMobile
}

node "Supabase Cloud" as SupabaseNode {
  component "Auth" as Auth
  component "Realtime" as RT
  database "PostgreSQL" as DB
}

node "External APIs" as ExternalNode {
  component "OpenStreetMap" as OSM
  component "Nominatim" as Geo
}

node "GPS" as GPSNode {
  component "Location Sensor" as GPS
}

' Client to Framework
WebApps -down-> FWeb
MobileApps -down-> FMobile

' Framework to Supabase
FWeb -down-> Auth
FMobile -down-> Auth

FWeb -down-> RT
FMobile -down-> RT

FWeb -down-> DB
FMobile -down-> DB

' Framework to External
FWeb -right-> OSM
FMobile -right-> OSM

FWeb -right-> Geo
FMobile -right-> Geo

' GPS
MobileApps -down-> GPS
GPS -down-> FMobile

@enduml
